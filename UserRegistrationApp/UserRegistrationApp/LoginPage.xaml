<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserRegistrationApp.LoginPage" BackgroundColor="Beige" Title="Login">
   
    <ContentPage.Content>
        
        <StackLayout Spacing="20" Padding="15" VerticalOptions="Center">
            <Label Text="UserName:" FontSize="Medium" />
            <Entry Text="" FontSize="Medium" x:Name="uname"/>
            <Label Text="Password:" FontSize="Medium" />
            <Entry Text="" FontSize="Medium" IsPassword="True" x:Name="pwd"/>
            <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
                <Button VerticalOptions="Center" Text="Login" Clicked="Button_Clicked" />
                <Button VerticalOptions="Center" Text="Register" Clicked="Button_Clicked_1" />
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>